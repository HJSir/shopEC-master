<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:background="@android:color/white"
                android:orientation="vertical"

    >



        <android.support.v7.widget.AppCompatImageView
            android:layout_alignParentLeft="true"
            android:id="@+id/tv_list_hot_image"
            android:layout_width="160dp"
            android:layout_height="130dp"
            android:layout_gravity="center"
            android:background="@android:color/white"/>

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/tv_list_hot_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/tv_list_hot_image"
        android:layout_toRightOf="@+id/tv_list_hot_image"
        android:gravity="left|center"
        android:text="美国海鲜"
        android:textColor="@color/we_chat_black"
        android:textSize="14sp"/>

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/tv_list_hot_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"


        android:layout_below="@+id/tv_list_hot_name"
        android:layout_toEndOf="@+id/tv_list_hot_image"
        android:layout_toRightOf="@+id/tv_list_hot_image"
        android:gravity="left|center"
        android:text="详情是"
        android:textSize="12sp"/>


    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/tv_list_hot_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/tv_list_hot_image"

        android:layout_toEndOf="@+id/tv_list_hot_image"
        android:layout_toRightOf="@+id/tv_list_hot_image"
        android:gravity="left|center"
        android:text="199.00"
        android:textColor="@android:color/holo_red_light"
        android:textSize="14sp"/>
    <Button
        android:layout_margin="5dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:textColor="@android:color/white"
        android:background="@android:color/holo_red_light"
        android:text="立即购买"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</RelativeLayout>