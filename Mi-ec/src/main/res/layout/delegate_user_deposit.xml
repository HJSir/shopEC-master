<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include
        layout="@layout/top_layout"/>
    <TextView
        android:id="@+id/tv_remit_account_cuurentsize"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:text="目前可提现金额："
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <EditText

        android:id="@+id/tv_remit_account_size"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="10dp"
        android:inputType="number|numberDecimal"
        android:hint="请输入提现金额"

        android:textSize="16sp"/>
    <TextView
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:text="请选择提现银行卡"
        android:textColor="@color/we_chat_black"

        android:textSize="16sp"/>
    <Spinner
        android:spinnerMode="dropdown"
        android:dropDownVerticalOffset="50dp"
        android:dropDownHorizontalOffset="-10dp"
        android:id="@+id/sp_remit_account"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="10dp"
        android:textSize="16sp"


        />
    <Button
        android:id="@+id/bt_remit_account_submit"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="20dp"
        android:background="@drawable/circle_all_yellow"
        android:text="提交"/>


</LinearLayout>