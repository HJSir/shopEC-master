<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:gravity="center_vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">



    <LinearLayout
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_width="80dp"
        android:layout_height="wrap_content">
        <View
            android:background="@color/lite_blue"
            android:layout_width="2dp"
            android:layout_height="40dp"></View>
        <com.joanzapata.iconify.widget.IconTextView
            android:id="@+id/tv_item_truck_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/holo_orange_dark"
            android:text="{icon-gou}"/>
        <View
            android:background="@color/lite_blue"
            android:layout_width="2dp"
            android:layout_height="40dp"></View>
    </LinearLayout>

    <LinearLayout
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tv_item_truck_remark"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:layout_margin="10dp"
            android:textColor="@color/we_chat_black"
            android:text="你的快递已到达张家界"/>
        <TextView
            android:id="@+id/tv_item_truck_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:paddingLeft="10dp"
            android:text="2018-3-8 15:30:00"/>
    </LinearLayout>
</LinearLayout>