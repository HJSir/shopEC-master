<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include
        layout="@layout/top_layout"/>

    <EditText
        android:id="@+id/tv_add_address_phone"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="10dp"

        android:hint="请输入联系电话"
        android:inputType="number"
        android:textSize="16sp"/>

    <EditText
        android:maxLength="10"
        android:id="@+id/tv_add_address_name"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="10dp"
        android:hint="请输入联系者姓名"
        android:textSize="16sp"/>
    <RelativeLayout
android:layout_marginBottom="@dimen/dp_10"
        android:id="@+id/rl_add_adress_chooseCity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_add_adress_chooseCity"
            android:layout_alignParentLeft="true"
            android:gravity="center"
            android:textSize="16sp"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:textColor="@color/we_chat_black"
            android:text="点击选择所在地区"
            android:layout_width="wrap_content"
        />
        <com.joanzapata.iconify.widget.IconTextView
            android:textColor="@color/we_chat_black"
            android:layout_height="30dp"
            android:layout_marginRight="5dp"
            android:gravity="center"
            android:textSize="20sp"
            android:layout_alignParentRight="true"
            android:text="{icon-right-menu}"
            android:layout_width="wrap_content"
          />

    </RelativeLayout>
    <EditText
        android:maxLength="50"
        android:gravity="left"
        android:background="@android:drawable/edit_text"
        android:id="@+id/tv_add_address_adressdetail"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginLeft="10dp"
        android:hint="详细地址"
        android:textSize="16sp"/>
    <Button
        android:id="@+id/bt_add_adress_submit"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="20dp"
        android:background="@drawable/circle_all_yellow"
        android:text="提交"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:text="请仔细确认信息无误"/>

</LinearLayout>